@model AhmetEmirKidik.EntityLayer.Kullanıcı
@{
	ViewBag.Title = "Add";
}

<h2>Kullanıcı Ekle</h2>
@using (Html.BeginForm("Add", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.AntiForgeryToken()
	<form>
		<div class="form-group">
			@Html.LabelFor(x=>x.EPosta,new {@class="control-label col-md-3" })
			<div class="col-md-3">
				@Html.TextBoxFor(x=>x.EPosta,new { @class="form-control",@placeholder="Enter email", @type = "email" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(x => x.Parola, new { @class = "control-label col-md-3" })
			<div class="col-md-3">
				@Html.TextBoxFor(x => x.Parola, new { @class = "form-control", @placeholder = "Enter Password" })
			</div>
		</div>
		<div class="form-group col-md-12">
			<a href="@Url.Action("List")" class="btn btn-outline-secondary btn-lg btn-block">İptal</a>
			<button type="submit" class="btn btn-primary btn-lg btn-block">Kaydet</button>
		</div>
		
	</form>
}

