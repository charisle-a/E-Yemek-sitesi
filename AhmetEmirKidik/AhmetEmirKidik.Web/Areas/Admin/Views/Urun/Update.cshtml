@model AhmetEmirKidik.EntityLayer.Urun
@{
	ViewBag.Title = "Update";
}

<h2>Ürün Düzenle</h2>
@using (Html.BeginForm("Update", "Urun", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.AntiForgeryToken()
<form>
	<div class="form-group">
		@Html.LabelFor(x => x.Ad, new { @class = "control-label col-md-3" })
		<div class="col-md-3">
			@Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @placeholder = "Urun adı giriniz" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Aciklama, new { @class = "control-label col-md-3" })
		<div class="col-md-6">
			@Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control", @placeholder = "Açıklama giriniz" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.FotoUrl, new { @class = "control-label col-md-3" })
		<div class="col-md-3">
			@Html.TextBoxFor(x => x.FotoUrl, new { @class = "form-control disabled", @placeholder = "FotoUrl" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Kategori, new { @class = "control-label col-md-3" })
		<div class="col-md-3">
			@Html.DropDownListFor(x => x.Kategori, ViewBag.Kategoriler as SelectList, "Kategori Seçiniz", new { @class = "form-control" })
		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(x => x.Fiyat, new { @class = "control-label col-md-3" })
		<div class="col-md-1">
			<span class="input-group-text">$</span>
		</div>
		<div class="col-md-3">
			@Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", @placeholder = "Urun Fiyatı giriniz" })
		</div>
	</div>
	<div class="form-group col-md-12">
		<a href="@Url.Action("List")" class="btn btn-outline-secondary btn-lg btn-block">İptal</a>
		<button type="submit" class="btn btn-primary btn-lg btn-block">Kaydet</button>
	</div>

</form>
}

