@model AhmetEmirKidik.EntityLayer.Kategori
@{
	ViewBag.Title = "Add";
}

<h2>Kategori Ekle</h2>
@using (Html.BeginForm("Add", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.AntiForgeryToken()
	<form>
		<div class="form-group">
			@Html.LabelFor(x => x.Ad, new { @class = "control-label col-md-3" })
			<div class="col-md-3">
				@Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @placeholder = "Kategori adı giriniz" })
			</div>
		</div>
		<div class="form-group col-md-12">
			<a href="@Url.Action("List")" class="btn btn-outline-secondary btn-lg btn-block">İptal</a>
			<button type="submit" class="btn btn-primary btn-lg btn-block">Kaydet</button>
		</div>

	</form>
}

